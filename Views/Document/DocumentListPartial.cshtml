@model IEnumerable<BTL_WebNC.Models.Document.DocumentModel>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Không tìm thấy tài liệu nào khớp với tiêu chí.</p>
}
else
{
    @foreach (var doc in Model)
    {
        <div class="col-sm-6 col-md-4 mb-4 doc-card" data-subjectid="@doc.SubjectId">
            <div class="card h-100 card-hover position-relative">
                @if (doc.Subject != null)
                {
                    <span class="badge bg-primary subject-badge">@doc.Subject.Name</span>
                }

                <a href="@Url.Action("View", "Document", new { id = doc.Id })" target="_blank" class="text-decoration-none">
                    <div class="doc-thumb">
                        <img src="@doc.ThumbnailPath" alt="@doc.Title" style="max-height:100%; max-width:100%; object-fit:contain;" />
                    </div>
                </a>

                <div class="card-body d-flex flex-column">
                    <h6 class="card-title doc-title mb-1 text-truncate">
                        <a href="@Url.Action("View", "Document", new { id = doc.Id })" target="_blank" class="text-decoration-none text-dark" title="@doc.Title">@doc.Title</a>
                    </h6>

                    @if (!string.IsNullOrEmpty(doc.FileName))
                    {
                        <p class="card-text text-muted small mb-2 text-truncate" title="@doc.FileName">
                            <i class="bi bi-file-earmark-text me-1"></i>@doc.FileName
                        </p>
                    }

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <small class="text-muted">&nbsp;</small>

                        <div>
                            @{
                                // Kiểm tra xem file có phải là PDF không
                                bool isPdf = doc.FilePath != null && doc.FilePath.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase);
                            }

                            @if (isPdf)
                            {
                                <a href="javascript:void(0);"
                                   class="btn btn-sm btn-outline-primary me-2"
                                   data-bs-toggle="modal"
                                   data-bs-target="#documentPreviewModal"
                                   data-src="@Url.Action("View", "Document", new { id = doc.Id })"
                                   title="Xem trước (popup)">
                                    <i class="bi bi-eye"></i>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("View", "Document", new { id = doc.Id })"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-primary me-2"
                                   data-bs-toggle="tooltip"
                                   title="Xem trước">
                                    <i class="bi bi-eye"></i>
                                </a>
                            }

                            <a href="@Url.Action("Download", "Document", new { id = doc.Id })" class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip" title="Tải xuống">
                                <i class="bi bi-download"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

<script>
    (function () {
        if (typeof bootstrap !== 'undefined') {
            try {
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                    // Xóa tooltip cũ nếu có để tránh trùng lặp
                    var existingTooltip = bootstrap.Tooltip.getInstance(tooltipTriggerEl);
                    if (existingTooltip) {
                        existingTooltip.dispose();
                    }
                    // Tạo tooltip mới
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            } catch (e) {
                console.warn('Tooltip init failed:', e);
            }
        }
    })();
</script>