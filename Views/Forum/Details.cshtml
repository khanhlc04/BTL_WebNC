@model BTL_WebNC.Models.Question.QuestionModel

@{
    ViewData["Title"] = "Chi tiết câu hỏi";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">📖 Chi tiết câu hỏi</h2>

    <!-- Question -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Content</h4>
            <p class="text-muted">Đăng bởi: <strong>@Model.Account.Email</strong> • @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <!-- Replies -->
    <h5 class="mb-3">💬 Các câu trả lời (@Model.Answers.Count(a => !a.Deleted))</h5>
    @if (Model.Answers.Any(a => !a.Deleted))
    {
        <div class="list-group">
            @foreach (var ans in Model.Answers.Where(a => !a.Deleted).OrderByDescending(a => a.CreatedAt))
            {
                <div class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">@ans.Account.Email</h6>
                        <small class="text-muted">@ans.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <p class="mb-1">@ans.Content</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Chưa có câu trả lời nào.</p>
    }

    <!-- Add reply -->
    <div class="mt-4">
        <h5>✍️ Thêm trả lời</h5>
        <form asp-action="AddReply" method="post">
            <input type="hidden" name="QuestionId" value="@Model.Id" />
            <div class="mb-3">
                <textarea name="Content" class="form-control" rows="3" placeholder="Nhập câu trả lời..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Gửi trả lời</button>
        </form>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Quay lại danh sách</a>
    </div>
</div>
