@model BTL_WebNC.Models.Answer.AnswerModel

<div class="answer-card card mb-3" data-timestamp="@Model.CreatedAt.Ticks">
    <div class="card-body">
        <div class="d-flex">
            <div class="me-3">
                <div class="border rounded-circle p-2">
                    <i class="bi bi-person"></i>
                </div>
            </div>
            <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h6 class="mb-0">@Model.Account.Email</h6>
                    <small class="text-muted">
                        <i class="bi bi-clock"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
                <p class="mb-0">@Model.Content</p>
            </div>
        </div>
    </div>
</div>