<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Admin - BTL_WebNC</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/BTL_WebNC.styles.css" asp-append-version="true" />
</head>

<body>
  <div class="d-flex" style="min-height: 100vh;">
    <nav class="sidebar bg-dark text-light p-3" style="width: 250px; min-height: 100vh;">
      <div class="sidebar-header mb-4">
        <a class="navbar-brand text-light" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item mb-2">
          <a class="nav-link text-light" asp-controller="Dashboard" asp-action="Index">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-light" asp-controller="Question" asp-action="Index">
            <i class="bi bi-question-circle"></i> Quản lý câu hỏi
          </a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-light" asp-controller="Document" asp-action="Index">
            <i class="bi bi-file-earmark-text"></i> Quản lý tài liệu
          </a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-light" asp-controller="Teacher" asp-action="Index">
            <i class="bi bi-person-badge"></i> Quản lý giảng viên
          </a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-light" asp-controller="Student" asp-action="Index">
            <i class="bi bi-person"></i> Quản lý sinh viên
          </a>
        </li>
        <li class="nav-item mt-4">
          <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">
            <i class="bi bi-box-arrow-right"></i> Đăng xuất
          </a>
        </li>
      </ul>
    </nav>
    <div class="flex-grow-1">
      <main role="main" class="p-4">
        @RenderBody()
      </main>
      <footer class="border-top footer text-muted mt-auto">
        <div class="container">
          &copy; 2025 - Admin BTL_WebNC
        </div>
      </footer>
    </div>
  </div>
  <!-- Sidebar layout replaces container/main/footer above -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>