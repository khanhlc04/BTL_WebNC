@{
  ViewData["Title"] = "Quản lý câu trả lời";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Quản lý câu trả lời</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nội dung</th>
      <th>Câu hỏi</th>
      <th>Tài khoản hỏi</th>
      <th>Thời gian tạo</th>
      <th>Thao tác</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Content</td>
                <td>
                  @if (item.Question != null)
                  {
                    @item.Question.Content
                  }
                </td>
                <td>@item.Account.Email</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-controller="AdminAnswer" asp-action="EditAnswer" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-controller="AdminAnswer" asp-action="DeleteAnswer" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="6">Không có dữ liệu</td></tr>
    }
  </tbody>
</table>
<a asp-controller="AdminAnswer" asp-action="CreateAnswer" class="btn btn-primary">Thêm câu trả lời</a>