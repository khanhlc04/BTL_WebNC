@{
  ViewData["Title"] = "Quản lý sinh viên";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Quản lý sinh viên</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Họ tên</th>
      <th>Email</th>
      <th>Mã sinh viên</th>
      <th>Mã tài khoản</th>
      <th>Thao tác</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null)
    {
      foreach (var item in Model)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.FullName</td>
          <td>@item.Email</td>
          <td>@item.StudentCode</td>
          <td>@item.AccountId</td>
          <td>
            <a asp-controller="Student" asp-action="EditStudent" asp-route-id="@item.Id"
              class="btn btn-sm btn-warning">Sửa</a>
            <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@item.Id"
              class="btn btn-sm btn-danger">Xóa</a>
          </td>
        </tr>
      }
    }
    else
    {
      <tr>
        <td colspan="5">Không có dữ liệu</td>
      </tr>
    }
  </tbody>
</table>
<a asp-controller="Student" asp-action="CreateStudent" class="btn btn-primary">Thêm sinh viên</a>