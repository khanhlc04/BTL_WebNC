@{
  ViewData["Title"] = "Thêm câu hỏi";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Thêm câu hỏi mới</h2>
<form method="post" asp-controller="AdminQuestion" asp-action="CreateQuestion">
  <div class="mb-3">
    <label for="Content" class="form-label">Nội dung câu hỏi</label>
    <textarea class="form-control" id="Content" name="Content" required></textarea>
  </div>
  <div class="mb-3">
    <label for="UserId" class="form-label">Người hỏi (ID)</label>
    <input type="number" class="form-control" id="UserId" name="UserId" required />
  </div>
  <button type="submit" class="btn btn-success">Tạo mới</button>
  <a asp-controller="AdminQuestion" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>