@{
    ViewData["Title"] = "Xóa môn học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Xác nhận xóa môn học</h2>
<p>Bạn có chắc chắn muốn xóa môn học này?</p>
<form asp-controller="AdminSubject" asp-action="DeleteSubjectConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-controller="AdminSubject" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
