@{
  ViewData["Title"] = "Xác nhận xóa tài khoản";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Xác nhận xóa tài khoản</h2>
<p>Bạn có chắc chắn muốn xóa tài khoản này?</p>
<form method="post" asp-controller="AdminAccount" asp-action="DeleteAccountConfirmed">
  <input type="hidden" name="id" value="@Model.Id" />
  <button type="submit" class="btn btn-danger">Xóa</button>
  <a asp-controller="AdminAccount" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>