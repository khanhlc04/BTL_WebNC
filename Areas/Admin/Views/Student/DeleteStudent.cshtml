@{
    ViewData["Title"] = "Xác nhận xóa sinh viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Xác nhận xóa sinh viên</h2>
<p>Bạn có chắc chắn muốn xóa sinh viên <strong>@Model.FullName</strong>?</p>
<form method="post" asp-controller="Student" asp-action="DeleteStudentConfirmed">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
