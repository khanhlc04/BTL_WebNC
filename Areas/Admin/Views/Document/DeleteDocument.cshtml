@{
  ViewData["Title"] = "Xác nhận xóa tài liệu";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Xác nhận xóa tài liệu</h2>
<p>Bạn có chắc chắn muốn xóa tài liệu <strong>@Model.Title</strong>?</p>
<form method="post" asp-controller="Document" asp-action="DeleteDocumentConfirmed">
  <input type="hidden" name="Id" value="@Model.Id" />
  <button type="submit" class="btn btn-danger">Xóa</button>
  <a asp-controller="Document" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>