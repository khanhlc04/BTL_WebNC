@{
  ViewData["Title"] = "Chỉnh sửa câu hỏi";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Chỉnh sửa câu hỏi</h2>
<form method="post" asp-controller="Question" asp-action="EditQuestion">
  <input type="hidden" name="Id" value="@Model.Id" />
  <div class="mb-3">
    <label for="Content" class="form-label">Nội dung câu hỏi</label>
    <textarea class="form-control" id="Content" name="Content" required>@Model.Content</textarea>
  </div>
  <div class="mb-3">
    <label for="AccountId" class="form-label">Người hỏi (ID)</label>
    <input type="number" class="form-control" id="AccountId" name="AccountId" value="@Model.AccountId" required />
  </div>
  <button type="submit" class="btn btn-success">Lưu thay đổi</button>
  <a asp-controller="Question" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>